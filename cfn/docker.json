{
  "AWSTemplateFormatVersion":"2010-09-09",
  "Description":"An ECS cluster for s3strm",

  "Resources": {
    "Repository": {
      "Type" : "AWS::ECR::Repository",
      "Properties" : {
        "RepositoryName" : "s3strm"
      }
    },

    "Cluster": {
      "Type" : "AWS::ECS::Cluster"
    },

    "Vpc": {
      "Type" : "AWS::EC2::VPC",
      "Properties" : {
        "CidrBlock" : "10.220.0.0/16"
      }
    },

    "Subnet": {
      "Type" : "AWS::EC2::Subnet",
      "Properties" : {
        "CidrBlock" : "10.220.0.0/24",
        "VpcId" : { "Ref" : "Vpc" }
      }
    },

    "EcsInstanceProfile": {
      "Type": "AWS::IAM::InstanceProfile",
      "Properties": {
        "Path": "/",
        "Roles": [ { "Ref": "EcsRole" } ]
      }
    }

  },

  "Outputs": {
    "Cluster": {
      "Value": { "Ref": "Cluster" }
    },

    "Repository": {
      "Value": { "Ref": "Repository" }
    },

    "Vpc": {
      "Value": { "Ref": "Vpc" }
    },

    "Subnet": {
      "Value": { "Ref": "Subnet" }
    }
  }
}

